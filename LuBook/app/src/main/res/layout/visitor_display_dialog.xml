<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cunfirm_activity_main"
    android:layout_width="1300dp"
    android:layout_height="800dp">

    <LinearLayout
        android:layout_width="1300dp"
        android:layout_height="800dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">
        <!--rebot_edit_dialog_bg-->
        <RelativeLayout
            android:layout_width="1100dp"
            android:layout_height="100dp">

            <Button
                android:id="@+id/visitor_close_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/close_btn" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cunfirm_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:inputType="textMultiLine"
                android:textSize="50sp"
                android:text="您已经预约完成，接下来请您打开手机，机器人需要扫描下服务器发送给您的二维码!"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/cunfirm_icon_dialog"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@null"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>